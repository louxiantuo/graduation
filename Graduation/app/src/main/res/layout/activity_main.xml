            android:layout_weight="1"
            android:text="On4"
            />

        <Button
            android:id="@+id/TurnOff4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Off4"
            />

        <TextView
            android:id="@+id/WifiState4"
